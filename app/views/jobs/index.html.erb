<h1>Listing Jobs</h1>
<%= link_to 'New Job', new_job_path %><br/><br/>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of capacity</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= job.number_of_capacity %></td>
        <td><%= job.employees.pluck(:name).join(', ')%></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
