<div class="card-body">
  <div class="row mt-8">
    <div class="col-9">
      <h5>Listing Employees</h5>
    </div>
    <div class="col-2 text-end">
      <%= link_to 'Add Employee', new_employee_path, class: "btn btn-outline-success btn-sm" %>
    </div>
  </div>

  <table class="table mt-4">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= link_to employee.name, employee_path(employee) %></td>
          <td><%= link_to 'Edit', edit_employee_path(employee), class: "btn btn-outline-info btn-sm" %></td>
          <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>